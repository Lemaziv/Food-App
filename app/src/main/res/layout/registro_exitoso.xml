<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:padding="18dp">

    <ImageButton
        android:id="@+id/BackRegistroFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        app:srcCompat="@drawable/ic_close" />

    <ImageView
        android:id="@+id/logoRegExitoso"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/logo_texto" />

    <TextView
        android:id="@+id/RegExitoso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="@string/regExitoso"
        android:textAlignment="center"
        android:textColor="@color/naranja_primario"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/graciasRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        android:text="Â¡Gracias por registrarte, bienvenido a FeedMe!"
        android:textAlignment="center"
        android:textSize="18sp" />

  </LinearLayout>
</LinearLayout>